<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS3.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtusuario" Placeholder="Ingrese su Usuario"/>
        <Entry x:Name="txtcontraseña" Placeholder="Ingrese su Contraseña" IsPassword="True"/>
        <Button x:Name="btnAbrir" Text="Abrir Ventana 2" Clicked="BtnAbrir_Clicked"/>
        <Label Text="" x:Name="lblMensaje" TextColor="Red"/>
        
    </StackLayout>

</ContentPage>
